#!/usr/bin/ruby
require_relative 'sudoku'
module Sudoku
  # Time for game
  class TimeGame
    def initialize
      @time = Time.now 
    end
    
    def reset
      @time = Time.now
    end

    def to_s
      time_diff = Time.now - @time
      Time.at(time_diff.to_i.abs).utc.strftime "%H:%M:%S"
    end
  end

end
Sudoku::SudokuGui.new.show
